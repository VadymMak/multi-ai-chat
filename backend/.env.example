# ===================================================
# DATABASE CONFIGURATION
# ===================================================
# Development (SQLite - default, no setup required)
DATABASE_URL=sqlite:///./memory.db

# Production (PostgreSQL - requires PostgreSQL server)
# DATABASE_URL=postgresql://username:password@localhost:5432/ai_assistant

# Optional: PostgreSQL connection pool settings
# SQL_POOL_SIZE=5
# SQL_MAX_OVERFLOW=10
# SQL_POOL_TIMEOUT=30
# SQL_POOL_RECYCLE=3600

# ===================================================
# API KEYS
# ===================================================
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
YOUTUBE_API_KEY=your-youtube-api-key-here

# Alternative API key names (optional)
# CHATITNOW_API_KEY=your-openai-api-key-here

# ===================================================
# MODEL CONFIGURATION
# ===================================================
DEFAULT_MODEL=gpt-4o-mini
ANTHROPIC_FALLBACK_MODEL=claude-3-5-haiku-20241022
# YT_SUMMARY_MODEL_KEY=gpt-4o-mini

# ===================================================
# TOKEN LIMITS
# ===================================================
SOFT_TOKEN_LIMIT=6000
HARD_TOKEN_LIMIT=7800
SUMMARIZE_TRIGGER_TOKENS=4500

# ===================================================
# YOUTUBE CONFIGURATION
# ===================================================
YOUTUBE_REGION_CODE=US
YOUTUBE_SAFESEARCH=moderate
YOUTUBE_ORDER=relevance
YOUTUBE_DEBUG=0
USE_LLM_FOR_YT_SUMMARY=true

# ===================================================
# GOOGLE CUSTOM SEARCH (OPTIONAL)
# ===================================================
# Get API key: https://console.developers.google.com/
# Create Custom Search Engine: https://programmablesearchengine.google.com/
# Free tier: 100 queries/day
# GOOGLE_SEARCH_API_KEY=your_google_api_key_here
# GOOGLE_SEARCH_CX=your_custom_search_engine_id_here

# ===================================================
# OPTIONAL SETTINGS
# ===================================================
LOG_TOKEN_COUNTS=0
OPENAI_FORCE_TEXT_RESPONSES=true
ANTHROPIC_MAX_TOKENS=4096
